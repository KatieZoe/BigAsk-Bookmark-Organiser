<!-- Form to edit and create new bookmarks -->

<%= form_for @bookmark, :class => 'mb-3' do |b| %>

<%= b.label :name, :class => 'form-label'  %>
<%= b.text_field :name, :class => 'form-control form-field' %>

<%= b.label :url, :class => 'form-label'  %>
<%= b.text_field :url, :class => 'form-control form-field' %>

<%= b.label "Add to category", :class => 'form-label'  %>
<%= b.select :category_id, @current_user.categories.pluck(:name, :id), :include_blank => true, :class => 'form-select form-field' %>

<%= b.submit 'Submit', :class => "btn btn-primary" %>

<% end  %>
