<h1>Bookmark Categories</h1>


<% @categories.each do |category| %>
  <div class="card">
    <h4 class="card-header"> <%= link_to category.name, category %></h4>
      <ul class='list-group list-group-flush'>
        <% category.bookmarks.each do |bookmark|%>
        <li class="list-group-item">  <%= link_to bookmark.name, bookmark.url, target: :_blank %>
        <% end %>
        </li>
    </ul>
  </div>
<% end  %>
